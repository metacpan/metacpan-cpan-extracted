#!/usr/bin/perl

use ZConf::DBI;
use strict;
use warnings;
use Getopt::Std;
use Term::ReadKey;

$Getopt::Std::STANDARD_HELP_VERSION = 1;

#version function
sub main::VERSION_MESSAGE {
        print "zcdbi-set 0.0.0\n";
}

#print help
sub main::HELP_MESSAGE {
        print "\n".
		      "-s <set>\n".
			  "-n <data source name>\n".
			  "-d <data source>\n",
			  "-u <user>\n".
			  "-p <pass>\n".
			  "-a  Ask the password.\n";
}

#gets the options
my %opts=();
getopts('as:n:d:u:p:', \%opts);

#asks the password if asked for
if ($opts{a}) {
	#ask for the password
	ReadMode(4);
	print 'password:';
	my $pass1=<STDIN>;
	print "\npassword:";
	my $pass2=<STDIN>;
	print "\n";
	ReadMode(0);

	#makes sure it is the same
	if ($pass1 ne $pass2) {
        warn('zcdbi-add:254: The passwords are not the same');
		exit 254;
	}
	chomp($pass1);
	$opts{p}=$pass1;
}

#initilize it
my $zcdbi=ZConf::DBI->new;

#read the specified set if requested
if (defined($opts{s})) {
	$zcdbi->readset($opts{s});
	if ($zcdbi->error) {
		warn('zcdbi-add:'.$zcdbi->error.': '.$zcdbi->errorString);
		exit $zcdbi->error;
	}
}

#add it
$zcdbi->addDS({
			   name=>$opts{n},
			   ds=>$opts{d},
			   user=>$opts{u},
			   pass=>$opts{p},
			   });
if ($zcdbi->error) {
	warn('zcdbi-add:'.$zcdbi->error.': '.$zcdbi->errorString);
	exit $zcdbi->error;
}

exit 0;

=head1 NAME

zcdbi-add - Adds a new data source.

=head1 SYNOPSIS

zcdbi-add [B<-s> <set>] B<-n> <data source name> B<-d> <data source> [B<-u> <user>] [B<-p> <pass>] [-a]

=head1 SWTICHES

=head2 -a

Ask for a password instead of specifying it via a switch, "-p".

=head2 -d <data source>

The DBI data source string.

=head2 -n <data source name>

The name of the data source to add.

=head2 -p <password>

Specifiy the password via a switch.

=head2 -s <set>

The set to load.

=head2 -u <user>

The user name to use with the data source.

=head1 EXIT CODES

Any non-zero exit codes, not listed below, are the error codes returned by ZConf.

=head2 254

The -a switch was used and the passwords did not match.

