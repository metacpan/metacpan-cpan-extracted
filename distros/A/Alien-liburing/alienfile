use alienfile;

plugin PkgConfig => pkg_name => 'liburing', minimum_version => '2.13';

share {
  start_url 'extern/liburing-2.13.tar.gz';
  plugin 'Fetch::Local';
  plugin Extract => format => 'tar.gz';
  plugin 'Gather::IsolateDynamic';
  build [
    './configure --prefix=%{.install.prefix}', 
    'make', 
    'make install',
  ];
};
