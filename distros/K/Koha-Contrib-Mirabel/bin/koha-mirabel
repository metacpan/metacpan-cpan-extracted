#!/usr/bin/perl


package Main;
$Main::VERSION = '1.0.0';
use Modern::Perl;
use Koha::Contrib::Mirabel;
use Getopt::Long;


binmode(STDOUT, ':encoding(utf8)');

my ($doit, $verbose) = (0, 1);
GetOptions( 
    'doit'     => \$doit,
    'verbose!' => \$verbose,
);

my $mirabel = Koha::Contrib::Mirabel->new( verbose => $verbose, doit => $doit );

for (@ARGV) {
    $mirabel->sync()       if /sync/;
    $mirabel->clean()      if /^clean/;
    $mirabel->full_clean() if /^fullclean/;
}

__END__

=pod

=encoding UTF-8

=head1 NAME

Main

=head1 VERSION

version 1.0.0

