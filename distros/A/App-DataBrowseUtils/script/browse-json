#!perl

use 5.010;
use strict;
use warnings;

use Getopt::Long;

our $AUTHORITY = 'cpan:PERLANCAR'; # AUTHORITY
our $DATE = '2025-01-22'; # DATE
our $DIST = 'App-DataBrowseUtils'; # DIST
our $VERSION = '0.001'; # VERSION

my $json_mod = '';
GetOptions(
    'pp' => sub { $json_mod = 'pp' },
    'xs' => sub { $json_mod = 'xs' },
    'help' => sub {
        print "Usage: pp-json [--pp|--xs] <file>\n";
        exit 0;
    },
);

my $json;
if ($json_mod eq 'pp') {
    require JSON::PP; $json = JSON::PP->new;
} elsif ($json_mod eq 'xs') {
    require Cpanel::JSON::XS; $json = Cpanel::JSON::XS->new;
} else {
    require JSON::MaybeXS; $json = JSON::MaybeXS->new;
}

undef $/;
my $data = $json->decode(scalar <>);

require Data::Dump::HTML::Collapsible;
require File::Temp;

my ($fh, $filename) = File::Temp::tempfile("browse-json-XXXXXXXX", TMPDIR => 1, SUFFIX => '.html');
print $fh Data::Dump::HTML::Collapsible::dump($data);
close $fh;

require Browser::Open;
Browser::Open::open_browser($filename);

1;
# ABSTRACT: Browse JSON in a browser as a collapsible tree
# PODNAME: browse-json

__END__

=pod

=encoding UTF-8

=head1 NAME

browse-json - Browse JSON in a browser as a collapsible tree

=head1 VERSION

This document describes version 0.001 of browse-json (from Perl distribution App-DataBrowseUtils), released on 2025-01-22.

=head1 OPTIONS

=over

=item * --pp

Force using a PP module (currently L<JSON::PP>) instead of the default
L<JSON::MaybeXS>.

=item * --xs

Force using an XS module (currently L<Cpanel::JSON::XS>) instead of
the default L<JSON::MaybeXS>.

=back

