{

    "debug"                           : 0,
    "dryrun"                          : 0,
    "logtoerr"                        : 0,
    "error_log"                       : "tmp/milter.err",
    "connection"                      : "unix:tmp/authentication_milter_test.sock",
    "umask"                           : "0000",
    "connect_timeout"                 : 55,
    "command_timeout"                 : 55,
    "content_timeout"                 : 595,
    "tempfail_on_error"               : 1,
    "tempfail_on_error_authenticated" : 1,
    "tempfail_on_error_local"         : 1,
    "tempfail_on_error_trusted"       : 1,

    "listen_backlog"         : 1,
    "min_children"           : 1,
    "max_children"           : 2,
    "min_spare_children"     : 1,
    "max_spare_children"     : 1,
    "max_requests_per_child" : 1000,

    "handlers" : {
        "SpamAssassin" : {
            "default_user" : "nobody",
            "sa_host" : "localhost",
            "sa_port" : "11783",
            "remove_headers" : "yes"
        },
        "UserDB" : {
            "add_header" : 1,
            "lookup" : [ "hash:config/spam/virtusertable" ]
        }
    }

}
