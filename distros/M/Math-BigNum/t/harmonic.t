#!perl -T

use 5.006;
use strict;
use warnings;
use Test::More;

plan tests => 18;

use Math::BigNum qw(:constant);

# Harmonic numbers
{
    my @results = qw(
      0/1
      1/1
      3/2
      11/6
      25/12
      137/60
      49/20
      363/140
      761/280
      7129/2520
      7381/2520
      );

    #
    ## harmfrac()
    #
    foreach my $i (0 .. $#results) {
        is(Math::BigNum->new($i)->harmfrac->as_frac, $results[$i]);
    }

    is((-1)->harmfrac, NaN);
    is(7001->harmfrac->as_frac,
''
      );

    #
    ## harmreal()
    #
    is((-42)->harmreal, NaN);
    is(0->harmreal,     0);
    is(1->harmreal,     1);
    like(1e6->harmreal,   qr/^14\.39272672286572/);
    like(12.34->harmreal, qr/^3\.13003/);
}
