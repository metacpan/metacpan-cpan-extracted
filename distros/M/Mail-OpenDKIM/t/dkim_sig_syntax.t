#!/usr/bin/perl -wT

use Test::More tests => 7;
use Error qw(:try);
BEGIN { use_ok('Mail::OpenDKIM') };

#########################

SIG_SYNTAX: {

	my $o = new_ok('Mail::OpenDKIM');
	ok($o->dkim_init());

	my $d;

	try {
		$d = $o->dkim_verify({
			id => 'MLM',
		});

		ok(defined($d));

		# d is a Mail::OpenDKIM::DKIM object
	} catch Error with {
		my $ex = shift;
		fail($ex->stringify);
	};

	isa_ok($d, 'Mail::OpenDKIM::DKIM');

	my $sig = 'DKIM-Signature: v=1; a=rsa-sha1; c=relaxed; d=example.com; h=from:to:subject; s=example; bh=TozDQdcuD/NljOIYtF7AyqaxB8s=; ';

	TODO: {
		local $TODO = 'dkim_sig_syntax returns DKIM_STAT_SYNTAX on syntactically valid signature';
		ok($d->dkim_sig_syntax({ str => $sig, len => length($sig) }) == DKIM_STAT_OK);
	}

	ok($d->dkim_free() == DKIM_STAT_OK);

	$o->dkim_close();
}
