#!/bin/bash

set -ex

cd $(mktemp -d)
curl -L https://github.com/Perl5-Alien/Alien-Build/tarball/master | tar zxf -
cd $(ls -1)
dzil-dzil authordeps --missing | dzil-cpanm -n
dzil-dzil install --install-command 'dzil-cpanm -n .'

cd $(mktemp -d)
curl -L https://github.com/Perl5-Alien/Acme-Alien-DontPanic2/tarball/master | tar zxf -
cd $(ls -1)
dzil-dzil authordeps --missing | dzil-cpanm -n
dzil-dzil install --install-command 'dzil-cpanm -n .'

