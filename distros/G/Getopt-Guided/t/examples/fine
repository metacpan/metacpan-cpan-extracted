use strict;
use warnings;

$main::VERSION = 'v6.6.6';

use File::Basename qw( basename );
use Getopt::Guided qw( EOOD processopts );

sub print_version {
  printf STDOUT "%s %s\n", basename( $0 ), $main::VERSION;
  EOOD
}

sub run ( \@ ) {
  my @argv = @{ $_[ 0 ] };

  return 2 unless processopts @argv, V => \&print_version, h => sub { };
  0
}

exit run @ARGV
