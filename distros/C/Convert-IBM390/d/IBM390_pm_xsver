require Exporter;

@ISA = qw(Exporter);
@EXPORT = qw();
@EXPORT_OK = qw(asc2eb eb2asc eb2ascp packeb unpackeb
   hexdump set_codepage set_translation);
$VERSION = '0.30';

%EXPORT_TAGS = ( all => [ @EXPORT_OK ] );

