#!/usr/bin/perl -CASD

use strict;
use warnings;

use App::FilterUtils::texize;
our $VERSION = '0.002'; # VERSION

App::FilterUtils::texize->run();

exit 0;

__END__

=head1 Command-line utility

texize - Filter input through TeX::Encode

