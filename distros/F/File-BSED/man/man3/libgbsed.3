.SH "NAME"
libgbsed \- Search/Replace in binary files.
.SH "SYNOPSIS"
.IX Header "SYNOPSIS"
.Vb 1
\&    #include <libgbsed.h>
\&
\&    // using file names.
\&    struct gbsed_arguments
\&    {
\&        char *search;
\&        char *replace;
\&        char *infilename;
\&        char *outfilename;
\&        int  minmatch;
\&        int  maxmatch;
\&    };
\&
\&    typedef struct gbsed_arguments GBSEDargs;
\&    
\&    int
\&    gbsed_binary_search_replace(struct gbsed_arguments *)
\&
