#  PROTO & ROUTE

PROTO Wheel [
	field SFColor color 0.8 0.2 0.2
] {
	Group {
	 children [
	 	DEF CONE Transform {
			translation 0 -1 0
			children [
			Transform {
			translation 0 0.5 0
			children [
			Shape {
				appearance Appearance {
					material Material {
						diffuseColor IS color
					}
				}
				geometry Cone {
					height 1
					bottomRadius 0.75
				}
			}
			]
			}
			]
		}
		Transform {
			rotation 0 0 1 1.570796
			children [USE CONE]
		}
		Transform {
			rotation 0 0 1 3.141593
			children [USE CONE]
		}
		Transform {
			rotation 0 0 1 4.71238898
			children [USE CONE]
		}
		DEF TIMER TimeSensor 
		  {cycleInterval 6 startTime 0 stopTime -1 enabled TRUE loop TRUE}
		DEF ORI OrientationInterpolator {
			key [ 0 0.25 0.5 0.75 1]
			keyValue [
				1 0 0 0
				1 0 0 1.570796
				1 0 0 3.141593
				1 0 0 4.71238898
				1 0 0 6.2831853
			]
		}
	 ]
	}
	ROUTE TIMER.fraction_changed TO ORI.set_fraction
	ROUTE ORI.value_changed TO CONE.rotation
}


DEF WHEEL Wheel { 
}

Transform {
	translation 0 0 2
	rotation 1 0 0 3.141593
	children USE WHEEL
}

