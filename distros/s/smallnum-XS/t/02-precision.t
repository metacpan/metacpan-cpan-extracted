use Test::More;
use smallnum::XS '0.1', '0.55555555';

is(9 * 0.01, "0.1");
is(smallnum::XS::_num(\1), "1");
is(smallnum::XS::_num(0.23765234354654), "0.2");
is(0.23765234354654, "0.2");
is(10 + 20.45, "30.5");
is(15 / 5.34, "2.8");
is(5000, 5000);
is(95 * 0.32, "30.4");
is(20.3743543 - 10.1, "10.3");
is(300 % 29, "10");
is(10 > 1, "1");
is(10 < 1, '');
is(10 == 10, "1");
is(10 != 10, '');
is(10 <= 10, "1");
is(10.10 >= 10.10, "1");
my $yay = 10;
$yay /= 2;
is($yay, "5");
my $yay = 5;
my $other = 10;
my $l = ($yay + $other) / 2;
is($l, "7.5");
is(10 + -10, "0");
is(smallnum::XS::_num(-5), "-5");
is(smallnum::XS::_divide(10, 0), "0");
is(smallnum::XS::_divide(0, 10), "0");
is(10 - 15, -5);
done_testing;
