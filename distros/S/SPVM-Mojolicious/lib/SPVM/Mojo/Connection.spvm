class Mojo::Connection extends Mojo::EventEmitter {
  version_from Mojolicious;
  
  use IO::Socket;
  
  # Fields
  has handle : rw IO::Socket;
  
  has timeout : virtual rw double
    get {
      $self->{handle}->timeout;
    }
    set {
      $self->{handle}->set_timeout($_);
    }
  ;
  
  has next : rw Mojo::Transaction;
  
  has requests : rw int;
  
  has tx : rw Mojo::Transaction;
  
  has tls : rw byte;
  
  # Class Methods
  static method new : Mojo::Connection () {
    
    my $self = new Mojo::Connection;
    
    return $self;
  }
  
}
