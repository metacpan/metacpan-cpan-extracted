  our $QUOTED_VALUE_RE : string;
  INIT {
    $QUOTED_VALUE_RE = "\A=\s*(\"(?:\\\\\\\\|\\\\\"|[^\"])*\")";
  }
  
  our $UNQUOTED_VALUE_RE : string;
  INIT {
    $UNQUOTED_VALUE_RE = "\A=\s*([^;, ]*)";
  }
  
  our $EXPIRES_RE : string;
  INIT {
    $EXPIRES_RE = "(\w+\W+\d+\W+\w+\W+\d+\W+\d+:\d+:\d+\W*\w+)";
  }
  
