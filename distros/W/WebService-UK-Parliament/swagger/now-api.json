{
  "openapi": "3.0.1",
  "info": {
    "title": "Annunciator content API",
    "description": "Get data from the annunciator system.",
    "contact": {
      "name": "UK Parliament",
      "url": "https://www.parliament.uk",
      "email": "softwareengineering@parliament.uk"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Message/message/{annunciator}/current": {
      "get": {
        "tags": [
          "Message"
        ],
        "summary": "Return the current message by annunciator type",
        "parameters": [
          {
            "name": "annunciator",
            "in": "path",
            "description": "Current message by annunciator",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/AnnunciatorType"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/MessageViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageViewModel"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/Message/message/{annunciator}/{date}": {
      "get": {
        "tags": [
          "Message"
        ],
        "summary": "Return the most recent message by annunciator after date time specified",
        "parameters": [
          {
            "name": "annunciator",
            "in": "path",
            "description": "Message by annunciator type",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/AnnunciatorType"
            }
          },
          {
            "name": "date",
            "in": "path",
            "description": "First message after date time specified",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Latest message for given annunciator was issued before specified date",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/MessageViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageViewModel"
                }
              }
            }
          },
          "400": {
            "description": "Date provided wasn't in a valid format"
          },
          "404": {
            "description": "No message for given annunciator was issued before specified date"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AnnunciatorType": {
        "enum": [
          "CommonsMain",
          "LordsMain",
          "Security"
        ],
        "type": "string"
      },
      "ContentStyle": {
        "enum": [
          "DividerSolid",
          "EmptyLine",
          "Member",
          "Footer",
          "AnsweringBody",
          "WestminsterHallInfo",
          "GrandCommitteeInfo",
          "DividerDotted",
          "DividerDashed",
          "Division",
          "Text150",
          "Text140",
          "Text130",
          "Text120",
          "Text110",
          "Text100",
          "Text90",
          "Text80",
          "Text70"
        ],
        "type": "string"
      },
      "ContentType": {
        "enum": [
          "Generic",
          "Member",
          "OralQuestionTime",
          "AnsweringBody",
          "Bill"
        ],
        "type": "string"
      },
      "HorizontalAlignment": {
        "enum": [
          "Left",
          "Right",
          "Centre"
        ],
        "type": "string"
      },
      "HouseMembershipViewModel": {
        "type": "object",
        "properties": {
          "membershipFrom": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LineViewModel": {
        "type": "object",
        "properties": {
          "displayOrder": {
            "type": "integer",
            "format": "int32"
          },
          "contentType": {
            "$ref": "#/components/schemas/ContentType"
          },
          "contentUrl": {
            "type": "string",
            "nullable": true
          },
          "contentAdditionalJson": {
            "type": "string",
            "nullable": true
          },
          "style": {
            "$ref": "#/components/schemas/ContentStyle"
          },
          "horizontalAlignment": {
            "$ref": "#/components/schemas/HorizontalAlignment"
          },
          "verticalAlignment": {
            "$ref": "#/components/schemas/VerticalAlignment"
          },
          "content": {
            "type": "string",
            "nullable": true
          },
          "member": {
            "$ref": "#/components/schemas/MemberViewModel"
          },
          "forceCapitalisation": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "MemberViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nameDisplayAs": {
            "type": "string",
            "nullable": true
          },
          "nameListAs": {
            "type": "string",
            "nullable": true
          },
          "nameFullTitle": {
            "type": "string",
            "nullable": true
          },
          "nameAddressAs": {
            "type": "string",
            "nullable": true
          },
          "thumbnailUrl": {
            "type": "string",
            "nullable": true
          },
          "latestParty": {
            "$ref": "#/components/schemas/PartyViewModel"
          },
          "latestHouseMembership": {
            "$ref": "#/components/schemas/HouseMembershipViewModel"
          }
        },
        "additionalProperties": false
      },
      "MessageViewModel": {
        "type": "object",
        "properties": {
          "annunciatorDisabled": {
            "type": "boolean"
          },
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "slides": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SlideViewModel"
            },
            "nullable": true
          },
          "scrollingMessages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScrollingMessageViewModel"
            },
            "nullable": true
          },
          "annunciatorType": {
            "$ref": "#/components/schemas/AnnunciatorType"
          },
          "publishTime": {
            "type": "string",
            "format": "date-time"
          },
          "isSecurityOverride": {
            "type": "boolean"
          },
          "showCommonsBell": {
            "type": "boolean"
          },
          "showLordsBell": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PartyViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "backgroundColour": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ScrollingMessageAlertType": {
        "enum": [
          "Standard",
          "SecondaryChamber",
          "Alert",
          "SecurityNormal",
          "SecurityHigh"
        ],
        "type": "string"
      },
      "ScrollingMessageViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "verticalAlignment": {
            "$ref": "#/components/schemas/VerticalAlignment"
          },
          "content": {
            "type": "string",
            "nullable": true
          },
          "displayFrom": {
            "type": "string",
            "format": "date-time"
          },
          "displayTo": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "alertType": {
            "$ref": "#/components/schemas/ScrollingMessageAlertType"
          }
        },
        "additionalProperties": false
      },
      "SlideType": {
        "enum": [
          "Debate",
          "Division",
          "OralQuestionTime",
          "UrgentQuestion",
          "Statement",
          "Prayers",
          "HouseRisen",
          "Generic",
          "NotSitting",
          "PrimeMinistersQuestions",
          "PointsOfOrder",
          "BlankSlide"
        ],
        "type": "string"
      },
      "SlideViewModel": {
        "type": "object",
        "properties": {
          "lines": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LineViewModel"
            },
            "nullable": true
          },
          "type": {
            "$ref": "#/components/schemas/SlideType"
          },
          "carouselOrder": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "carouselDisplaySeconds": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "speakerTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "slideTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "soundToPlay": {
            "$ref": "#/components/schemas/Sounds"
          },
          "id": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "Sounds": {
        "enum": [
          "NewSlide",
          "DivisionBell",
          "Alert",
          "GenericBeep"
        ],
        "type": "string"
      },
      "VerticalAlignment": {
        "enum": [
          "Top",
          "Middle",
          "Bottom"
        ],
        "type": "string"
      }
    }
  }
}