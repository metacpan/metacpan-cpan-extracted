	    return SUN_LIN_16;
#else
	    goto not_there;
#endif
	}
    case '8':
	if (strEQ(name + 5, "IN_8")) {	/* SUN_L removed */
#ifdef SUN_LIN_8
	    return SUN_LIN_8;
#else
	    goto not_there;
#endif
	}
    }
    errno = EINVAL;
