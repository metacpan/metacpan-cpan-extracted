BEGIN {@AnyDBM_File::ISA=qw(DB_File GDBM_File SDBM_File NDBM_File ODBM_File) }
#BEGIN { @AnyDBM_File::ISA=qw(GDBM_File SDBM_File NDBM_File ODBM_File) }
use AnyDBM_File;
use POSIX;

use vars qw($opt_d);
use Getopt::Std;

getopts('d:');
my $dbmfile=shift @ARGV;


if ($opt_d=~/gdbm/i){
    require('GDBM_File.pm');
    tie (%dbm, 'GDBM_File',$dbmfile);
}
else{
    tie (%dbm, 'AnyDBM_File',$dbmfile);
}

my $count = 0;
while (<>){
    chomp;
    my ($key,$val) = split(/ => /);
    $dbm{$key} = $val;
    $count++;
    if (not ($count % 40000)){print STDERR '.';}
    if (not ($count % 400000)){print STDERR "$count\n";}
}

untie %dbm;


