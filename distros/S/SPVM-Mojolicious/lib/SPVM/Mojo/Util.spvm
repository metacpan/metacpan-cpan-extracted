  private static method _header : string[][] ($str : string, $cookie : int = 0) {
    
    my $tree = (List of string[])List->new(new string[][0]);
    my $part = StringList->new;
    
    my $offset = 0;
    while (my $_ = Re->m($str, "\A[,;\s]*([^=;, ]+)\s*", \$offset)) {
      $part->push($_->cap1);
      $part->push(undef);
      
      my $expires = 0;
      if ($cookie && $part->length > 2 && Fn->lc($_->cap1) eq "expires") {
        $expires = 1;
      }
      
      # Special "expires" value
      my $match = Re->m($str, "\A=\s*$EXPIRES_RE", \$offset);
      if ($expires && $match) { $part->set($part->length - 1, $match->cap1); }
      
      # Quoted value
      elsif (my $_ = Re->m($str, $QUOTED_VALUE_RE, \$offset)) { $part->set($part->length - 1, &unquote($_->cap1)); }
      
      # Unquoted value
      elsif (my $_ = Re->m($str, $UNQUOTED_VALUE_RE, \$offset)) { $part->set($part->length - 1, $_->cap1); }
      
      # Separator
      unless (Re->m($str, "\A[;\s]*,\s*", \$offset)) {
        next;
      }
      
      $tree->push($part->to_array);
      $part = StringList->new;
    }
    
    if ($part->length > 0) {
      $tree->push($part);
    }
    
    return $tree->to_array;
  }
  
  static method unquote : string ($str : string) {
    
    my $str = copy $str;
    my $_ = Re->s((mutable string)$str, ["^\"(.*)\"$", "g"], method : string ($regex : Regex, $match : Regex::Match) {
      return $match->cap1;
    });
    
    unless ($_) {
      return $str;
    }
    
    Re->s((mutable string)$str, ["\\\\\\\\", "g"], "\\");
    
    Re->s((mutable string)$str, ["\\\\\"", "g"], "\"");
    
    return $str;
  }
  
  static method quote : string ($str : string) {
    
    my $str = copy $str;
    Re->s((mutable string)$str, ["([\"\\\\])", "g"], method : string ($regex : Regex, $match : Regex::Match) {
      return "\\" . $match->cap1;
    });
    
    return "\"$str\"";
  }
  
  static method header_params : object[] ($value : string){
    
    my $params = Hash->new;
    my $offset = 0;
    while (my $_ = Re->m($value, "\A[;\s]*([^=;, ]+)\s*", \$offset)) {
      my $name = $_->cap1;
      
      # Quoted value
      if (my $_ = Re->m($value, $QUOTED_VALUE_RE, \$offset)) {
        my $found = $params->get($name);
        unless ($found) {
          $params->set($name, &unquote($_->cap1));
        }
      }
      
      # Unquoted value
      elsif (my $_ = Re->m($value, $UNQUOTED_VALUE_RE, \$offset)) {
        my $found = $params->get($name);
        unless ($found) {
          $params->set($name, $_->cap1);
        }
      }
    }
    
    return [(object)$params, Fn->substr($value, $offset)];
  }
  
  static method _options : object[] ($args : object...)  {
    
    # The arguments are three pattern.
    # 1. a value
    # 2. a value and options
    # 3. options
    
    unless (@$args <= 2) {
      die "Too many arguments.";
    }
    
    my $arg = (object)undef;
    my $options = (object[])undef;
    
    if (@$args == 0) {
      # Do nothing
    }
    elsif (@$args == 1) {
      if ($args->[0] isa object[]) {
        $options = (object[])$args->[0];
      }
      else {
        $arg = $args->[0];
      }
    }
    elsif (@$args == 2) {
      $arg = $args->[0];
      if ($args->[1] isa object[]) {
        $options = (object[])$args->[1];
      }
      else {
        die "The type of the second argument must be object[].";
      }
    }
    
    return [$arg, $options];
  }
  
