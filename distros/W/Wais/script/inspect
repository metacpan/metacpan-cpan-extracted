#!/app/unido-i06/share/lang/perl/5.00469/bin/perl

eval 'exec /app/unido-i06/share/lang/perl/5.00469/bin/perl  -S $0 ${1+"$@"}'
    if 0; # not running under some shell
eval 'exec perl -S $0 "$@"'
    if 0;
#                              -*- Mode: Perl -*- 
