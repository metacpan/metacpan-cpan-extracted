use alienfile;

plugin 'PkgConfig' => 'libgearman';

share {

  plugin 'Build::SearchDep' => (
    aliens => [qw( Alien::libuuid Alien::Libevent )],
  );

  start_url 'https://launchpad.net/gearmand/+milestone/0.12';
  plugin 'Download' => (
    filter => qr/^gearmand-.*\.tar\.gz$/,
    version => qr/([0-9\.]+)/,
  );

  plugin 'Extract';
  
  plugin 'Build::Autoconf';

};

