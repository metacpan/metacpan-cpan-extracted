use strict;
use Getopt::Std;

my $USAGE = <<__EOU;
Usage: dvdrip-exec [-n nice] command options ...
__EOU

main: {
    my %opt;
    my $opt_ok = getopts ('n:', \%opt);
    usage() if not $opt_ok or !@ARGV;

    my $nice = $opt{n};

    print STDERR "DVDRIP_JOB_PID=$$\n";

    exec "nice", "-n", $nice, @ARGV if $nice;
    exec @ARGV;
}

sub usage {
    print $USAGE;
    exit 1;
}
