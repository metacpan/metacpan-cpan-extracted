use Test::More;
use smallnum::XS;
is(smallnum::XS::_num(\1), 1);
is(smallnum::XS::_num(0.23765234354654), "0.24");
is(0.23765234354654, "0.24");
is(10 + 20.45, "30.45");
my $num = 10;
is($num += 20.45, "30.45");
is(15 / 5.34, "2.81");
$num = 15;
is($num /= 5.34, "2.81");
is(5000, "5000");
is(9 * 0.01, "0.09");
$num = 9;
is($num *= 0.01, "0.09");
is(95 * 0.32, "30.4");
is(20.3743543 - 10.1, "10.27");
$num = 20.3743543;
is($num -= 10.1, "10.27");
is(300 % 29, "10");
$num = 300;
is($num %= 29, "10");
is(10 > 1, "1");
is(10 < 1, '');
is(10 == 10, "1");
is(10 != 10, '');
is(10 <= 10, "1");
is(10.10 >= 10.10, "1");
my $yay = 10;
$yay /= 2;
is($yay, "5");
my $yay = 5;
my $other = 10;
my $l = ($yay + $other) / 2;
is($l, "7.5");
is(10 + -10, "0");
done_testing;
