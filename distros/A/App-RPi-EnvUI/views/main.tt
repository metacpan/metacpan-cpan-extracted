<html>
<head>

    <link rel="stylesheet" type="text/css" href="css/button.css">
    <link rel="stylesheet" type="text/css" href="css/envui.css">

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.3.0/Chart.bundle.js"></script>

    <!--<script type="text/javascript" src="ext/easyui/query.min.js"></script>-->
    <!--<script type="text/javascript" src="Chart.js"></script>-->

    <script type="text/javascript" src="js/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="js/core.js"></script>


</head>
<body>

<!-- Temperature -->

<table>
    <th colspan="2" align="center"><font size="20">Temperature</font></th>
    <tr>
        <td style="text-align: left;"><font size="15"><div class="data" id="temp"></div></font></td>
        <td style="text-align: right;"><input id="aux1" class="button" style="width:120px;height:30px"></td>
    </tr>
    <tr>
        <td colspan="2"><canvas id="temp_chart" width="600" height="200"></canvas></td>
    </tr>
</table>

<!-- Humidity -->

<table>
    <th colspan="2" align="center"><font size="20">Humidity</font></th>
    <tr>
        <td style="text-align: left;"><font size="15"><div class="data" id="humidity"></div></font></td>
        <td style="text-align: right;"><input id="aux2" class="button" style="width:120px;height:30px"></td>
    </tr>
    <tr>
        <td colspan="2"><canvas id="humidity_chart" width="600" height="200"></canvas></td>
    </tr>
    <tr style="height: 30px;">
    </tr>
    <tr>
        <th class="opt_aux3"><font size="5">Auxillary #3</font></th>
        <th class="opt_aux4"><font size="5">Auxillary #4</font></th>
    </tr>
    <tr>
        <td class="opt_aux3"><input id="aux3" class="button" style="width:120px;height:30px"></td>
        <td class="opt_aux4"><input id="aux4" class="button" style="width:120px;height:30px"></td>
    </tr>
</table>

</body>
</html>
