#!/bin/bash

for i in lib/Text/NumericData/App/txd*.pm
do
  app=$(basename $i)
  app=${app/.pm/}
  script=script/$app
  echo "$script"
  mod=$(echo $i | perl -pe 's:^lib/(.+)\.pm:$1:; s,/,::,g;')
  echo "#!/usr/bin/env perl

use $mod;

my \$app = $mod->new();
exit \$app->run();

__END__
" > $script && chmod +x $script &&
  perl -Ilib $script -h=-100 >> $script
done
