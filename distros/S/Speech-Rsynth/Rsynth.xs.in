}

static double
constant_SUN_U(char *name, int len, int arg)
{
    switch (name[5 + 0]) {
    case 'L':
	if (strEQ(name + 5, "LAW")) {	/* SUN_U removed */
#ifdef SUN_ULAW
	    return SUN_ULAW;
#else
	    goto not_there;
#endif
	}
    case 'N':
	if (strEQ(name + 5, "NSPEC")) {	/* SUN_U removed */
#ifdef SUN_UNSPEC
	    return SUN_UNSPEC;
#else
	    goto not_there;
#endif
	}
    }
    errno = EINVAL;
