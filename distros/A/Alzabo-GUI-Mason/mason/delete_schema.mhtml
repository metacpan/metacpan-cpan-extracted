<%args>
$schema
</%args>

<%init>
my $s;
eval
{
    $s = Alzabo::Create::Schema->load_from_file( name => $schema );

    $s->delete;
};

my $e = $@;

$m->comp( 'exception', $e ) if $e;

$m->redirect( uri( path => 'index' . Alzabo::GUI::Mason::Config::mason_extension() ) );

</%init>

<%flags>
inherit => 'syshandler'
</%flags>
