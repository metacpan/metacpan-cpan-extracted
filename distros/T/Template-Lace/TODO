sub listclass {
  my ($self, $li) = @_;
  return $self->completed ? 'completed : undef;
}

===

sub template {qq[
  <ol>
    <view-todo task=$.task />
  </ol>
]}

sub process_dom {
  my ($self, $dom) = @_;
  $dom->component('view-todo')
    ->first
    ->repeat(sub {
        my ($dom, $task) = @_;
        $dom->process_component({task=>$task})
      }, $self->tasks);
}

