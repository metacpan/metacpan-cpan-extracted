<$.fill_user>
  <dl>
    <dt>Name</dt>
    <dd lace='name'>Jo Smith</dd>
    <dt>Age</dt>
    <dd lace='age'>24</dd>
  </dl>
</$.fill_user>

sub fill_user {
  my ($self, $data) = @_;
  $data->name($self->name);
  $data->age($self->age);
}

--------

<ul lace-method="$.display_links"
    class="nav navbar-nav navbar-right">
  <li><a lace='link_title'
      lace@href='href'
      lace@class='is_active'>
    Link
  </a></li>
</ul>

sub display_links {
  my ($self, $dom) = @_;
  $dom->repeat(sub {
    my ($dom, $link, $index) = @_;
    $dom->data
      ->link_title($link->title)
      ->href($link->uri)
      ->class({'active', $self->active_link eq $link->{id}});
    return $dom;
  }, $self->links);
}

----------
        
<ul @repeat="$.links" lace-method="$.display_links"
    class="nav navbar-nav navbar-right">
  <li><a lace='link_title'
      lace@href='href'
      lace@class='is_active'>
    Link
  </a></li>
</ul>

sub display_links {
  my ($self, $data) = @_;
  $data->repeat(sub {
    my ($datum, $link, $index) = @_;
    $datum->content($link->title)
      ->href($link->uri)
      ->class({'active', $self->active_link eq $link->{id}});
    return $datum;
  }, $self->links);
}

<section lace-render='$.render_links'>
  <p lace-data='title'></p>
  <ul>
    <li lace-data='links'>
      <a lace-data='description'
          lace-data@href='link'>
        Link Link
      </a>
    </li>
  </ul>
<section>



sub render_links {
  my ($self, $dom) = @_;
  $dom->data
    ->title('Hello')
    ->links( sub {
        my ($self, $dom) = @_;
        $dom->repeat( sub {
          my ($li, $link) = @_;
          $li->data
            ->description($link->description)
            ->link($link->url);
          return $li;
        }, $self->links);
      });
}

  $dom->data
    ->title('Hello')
    ->links
    ->repeat(sub {
      my ($li, $link) = @_;
      $li->data
        ->description($link->description)
        ->link($link->url);
        return $li;
    })
    
  $dom->data
    ->title('Hello')
    ->links
    ->repeat($self->curry::render_link)
    ->then
    ->more...

sub render_link {
  my (self, $li, $link) = @_;
  $li->data
    ->description($link->description)
    ->link($link->url);
  return $li;
}

