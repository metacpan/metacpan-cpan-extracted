#!/usr/bin/perl

use ZConf::DBI;
use strict;
use warnings;
use Getopt::Std;
use DBI::Shell;

$Getopt::Std::STANDARD_HELP_VERSION = 1;

#version function
sub main::VERSION_MESSAGE {
        print "zcdbi-sh 0.0.0\n";
}

#print help
sub main::HELP_MESSAGE {
        print "\n".
		      "-s <set>\n".
			  "-d <data source>\n";
}

#gets the options
my %opts=();
getopts('s:d:', \%opts);

#initilize it
my $zcdbi=ZConf::DBI->new;

#read the specified set if requested
if (defined($opts{s})) {
	$zcdbi->readset($opts{s});
	if ($zcdbi->error) {
		warm('zcdbi-sh:'.$zcdbi->error.': '.$zcdbi->errorString);
		exit $zcdbi->error;
	}
}

#fetches the DS
my $ds=$zcdbi->getDS($opts{d});
if ($zcdbi->error) {
	warn('zcdbi-sh:'.$zcdbi->error.': '.$zcdbi->errorString);
	exit $zcdbi->error;
}
#fetches the DS user
my $user=$zcdbi->getDSuser($opts{d});
if ($zcdbi->error) {
	warn('zcdbi-sh:'.$zcdbi->error.': '.$zcdbi->errorString);
	exit $zcdbi->error;
}
#fetches the DS user
my $pass=$zcdbi->getDSpass($opts{d});
if ($zcdbi->error) {
	warn('zcdbi-sh:'.$zcdbi->error.': '.$zcdbi->errorString);
	exit $zcdbi->error;
}

DBI::Shell->new($ds, $user, $pass)->run;

exit 0;

=head1 NAME

zcdbi-sh - Connects to the specified ZConf::DBI data source using DBI::Shell.

=head1 SYNOPSIS

zcdbi-sh [B<-s> <set>] B<-d> <data source name>

=head1 SWTICHES

=head2 -d <data source name>

The name of the data source to connect to.

=head2 -s <set>

The set to load.

=head1 EXIT CODES

Any non-zero exit codes are the error codes returned by ZConf.

